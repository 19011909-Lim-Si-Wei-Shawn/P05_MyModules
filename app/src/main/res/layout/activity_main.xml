<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:showDividers="middle"
    android:divider="@color/cardview_dark_background"
    android:padding="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="20dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            app:srcCompat="@drawable/rplogotagline_high_res_dd840e80" />
    </LinearLayout>

    <TextView
        android:id="@+id/TV300"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/Module_C300"
        android:gravity="center_vertical"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/TV322"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:text="@string/Module_C322"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/TV382"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:text="@string/Module_C382"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/TV346"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:text="@string/Module_C346"
        android:textSize="20sp" />

</LinearLayout>
